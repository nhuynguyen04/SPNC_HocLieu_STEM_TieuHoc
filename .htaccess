RewriteEngine On

# Bỏ qua các tệp và thư mục đã tồn tại
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Chuyển hướng tất cả các yêu cầu khác đến index.php
# (Nếu tệp router của bạn là index.php)
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Ghi chú: Nếu tệp router của bạn là routes.php, 
# hãy thay 'index.php' thành 'routes.php'